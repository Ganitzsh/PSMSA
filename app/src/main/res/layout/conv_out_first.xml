<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/conv_bar"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="13.5dp"
        android:layout_marginBottom="13.5dp"
        android:layout_toStartOf="@+id/conv_circle_you"
        android:background="@color/mainBlue" />

    <ImageView
        android:id="@+id/conv_circle_you"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/simple_dot"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/conv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/conv_bar"
        android:layout_alignStart="@+id/conv_bar"
        android:layout_below="@+id/conv_bar"
        android:lineSpacingExtra="5sp"
        android:gravity="end"
        android:textSize="16sp" />

</RelativeLayout>